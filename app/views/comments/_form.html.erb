<% if user_signed_in? %>
  <%= form_for ([@post, @post.comments.build]) do |f| %>
    <%= f.text_field :comment, size: "50x6" %>
    <%= f.submit class: "btn btn-success"%>
    <%= link_to "Cancel", root_path, class: "btn btn-danger"%>
  <% end %>
<% else %>
  <%= link_to "Main page", root_path, class: "btn btn-success"%>
<%end%>
